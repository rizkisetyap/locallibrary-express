<%- include('../../header',{title:"List of Genres"}); %>
<main class="max-w-4xl mx-auto">
  <div id="wrapper" class="mt-8">
    <h1 class="text-2xl font-bold text-gray-600">List Genres</h1>

    <a
      class="my-2 py-2 px-4 inline-block bg-blue-500 text-white rounded-sm"
      href="/catalog/genre/create"
      >Add new genre</a
    >
    <!-- flashmessage -->
    <%- include('../../flash'); %>
    <!-- flashmessage -->
    <div class="grid grid-cols-4 gap-3 mt-8">
      <% genres.forEach(genre => {%>
      <a
        class="
          inline-block
          border
          bg-blue-100
          shadow-md
          rounded-sm
          px-6
          py-2
          border-blue-200
          text-gray-600
          hover:bg-blue-400
          transition-all
          duration-300
          ease-in-out
        "
        href="<%= genre.url %>"
        ><%= genre.name %></a
      >
      <%}) %>
    </div>
  </div>
</main>
<%- include('../../footer');%>
